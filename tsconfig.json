{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "baseUrl": "./",
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* Coustom */
    "allowJs": true, // 允許 import js
    /* Linting */
    "strict": true, // 嚴格模式
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSourceMap": true, // 產生 inline source map
    "noEmit": true,
    "allowSyntheticDefaultImports": true, // 允許 import default
    "esModuleInterop": false, // 不使用 esModuleInterop
    "forceConsistentCasingInFileNames": true, // 強制檔案名稱大小寫一致
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["src"]
}
