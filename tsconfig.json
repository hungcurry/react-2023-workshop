{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true, // 嚴格模式
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Coustom */
    "allowJs": true, // 允許 import js
    "esModuleInterop": false, // 不使用 esModuleInterop
    "allowSyntheticDefaultImports": true, // 允許 import default
    "forceConsistentCasingInFileNames": true, // 強制檔案名稱大小寫一致
    "inlineSourceMap": true, // 產生 inline source map
    "baseUrl": "./", 
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
